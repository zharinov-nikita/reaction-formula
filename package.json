{
  "name": "reaction-formula",
  "version": "1.0.8",
  "description": "Reaction formula is a hook for simple form validation in react applications.",
  "main": "./dist/index.js",
  "scripts": {
    "build": "webpack",
    "test": "jest --verbose ./src",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.tsx\"",
    "lint": "npx eslint ./src",
    "hook": "npx generate-react-cli component --type=hook",
    "validator": "npx generate-react-cli component --type=validator"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/zharinov-nikita/reaction-formula.git"
  },
  "keywords": [
    "reaction-formula",
    "react",
    "react hooks",
    "validation",
    "forms"
  ],
  "author": "zharinov-nikita",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/zharinov-nikita/reaction-formula/issues"
  },
  "homepage": "https://github.com/zharinov-nikita/reaction-formula#readme",
  "devDependencies": {
    "@babel/core": "^7.20.5",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^29.2.3",
    "@types/mocha": "^10.0.1",
    "@types/react": "^18.0.25",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "babel-jest": "^29.3.1",
    "eslint": "^8.31.0",
    "generate-react-cli": "^8.0.1",
    "husky": "^8.0.2",
    "jest": "^29.3.1",
    "prettier": "^2.8.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.4",
    "webpack": "^5.75.0",
    "webpack-cli": "^5.0.0"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "files": [
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": [
        "npm run format",
        "npm run lint"
      ]
    }
  }
}
